<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Knowledge Graph</title>
    <style>
        body { margin: 0; font-family: sans-serif; }
        .graph-container {
            width: 100vw;
            height: 100vh;
            transition: background-color .3s;
        }
        #graph-info {
            position: absolute;
            top: 10px;
            left: 10px;
            color: white;
            background-color: rgba(0,0,0,.5);
            padding: 10px;
            border-radius: 5px;
            max-width: 300px;
            transition: background-color .3s, color .3s;
        }
        #info-toggle {
            cursor: pointer;
            font-weight: bold;
            padding-right: 5px;
        }
        .info-content.collapsed {
            display: none;
        }
        /* 主题选择器 */
        #theme-switch {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
        }
        #theme-switch select {
            padding: 4px 8px;
            border-radius: 4px;
            border: none;
            outline: none;
        }
    </style>
</head>
<body>
    <!-- 强制注销可能出错的 Service Worker -->
    <script>
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.getRegistrations().then(function(registrations) {
                for(let registration of registrations) {
                    registration.unregister();
                    console.log('Service Worker unregistered.');
                }
            });
        }
    </script>
    <div id="graph-container" class="graph-container"></div>

    <!-- 主题切换 -->
    <div id="theme-switch">
        <select id="theme-select">
            <option value="dark">Dark</option>
            <option value="light">Light</option>
        </select>
    </div>

    <div id="graph-info">
    <span id="info-toggle">[+]</span>
    <div class="info-content">
        <p><strong>Interactive Knowledge Graph</strong></p>
        <p>Hover over nodes to see titles. Click to focus.</p>
        <p>Use your mouse to rotate, pan, and zoom.</p>
        <p><u>Tip:</u> Right-click or Double-click a node to open its page.</p>
    </div>
    </div>  

    <!-- 回退到 unpkg.com -->
    <script src="https://unpkg.com/three@0.128.0/build/three.min.js"></script>
    <script src="https://unpkg.com/3d-force-graph@1.70.10/dist/3d-force-graph.min.js"></script>
    <script src="https://unpkg.com/three-spritetext@1.6.5/dist/three-spritetext.min.js"></script>

    <script>
        const container = document.getElementById('graph-container');
        const infoBox   = document.getElementById('graph-info');
        const themeSel  = document.getElementById('theme-select');

        // 主题配色表
        const themes = {
            dark: {
                bg: '#000003',
                infoBg: 'rgba(0,0,0,.5)',
                infoText: '#ffffff',
                linkColor: '#20c3d1ff',
                fadedLinkColor: 'rgba(203, 63, 58, 0.62)'
            },
            light: {
                bg: '#ffffff',
                infoBg: 'rgba(255,255,255,.85)',
                infoText: '#000000',
                linkColor: '#000000',
                fadedLinkColor: 'rgba(0, 0, 0, 0.2)'
            },
        };

        // 应用主题
        function applyTheme(name) {
            const t = themes[name];
            container.style.backgroundColor = t.bg;
            infoBox.style.backgroundColor   = t.infoBg;
            infoBox.style.color             = t.infoText;

            // 更新已加载的图样式
            if (window.Graph) {
                window.Graph.backgroundColor(t.bg);
                window.Graph.linkColor(t.linkColor);
            }
        }

        // 监听下拉框，只更新本页主题
        themeSel.addEventListener('change', e => applyTheme(e.target.value));

        // --- One-way theme synchronization from main site ---
        let detectedTheme = window.localStorage.getItem('site-theme') || 'auto';

        if (detectedTheme === 'auto') {
            // If set to auto, detect OS preference
            detectedTheme = (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) ? 'dark' : 'light';
        }
        
        // Apply the detected theme ('dark' or 'light')
        applyTheme(detectedTheme);
        themeSel.value = detectedTheme; // Sync dropdown to show the correct theme


        // --- Consistent Color Scheme from graphScript.njk ---
        function getNodeColorByPath(dgPath, defaultColor) {
            if (!dgPath) return defaultColor;
            if (dgPath.includes("代数")) return "#F59E0B";    
            if (dgPath.includes("机器人")) return "#84CC16";
            if (dgPath.includes("过程控制")) return "#9A4E90";
            if (dgPath.includes("智能")) return "#FF0000";
            if (dgPath.includes("控制")) return "#7496ff";
            if (dgPath.includes("数学")) return "#c44f70";
            return defaultColor;
        }
        // ----------------------------------------------------

        const getColor = (node) => {
             // Use the path-based color logic first
             return getNodeColorByPath(node.id, themes[detectedTheme].linkColor);
        };

        // --- Info Box Toggle --- 
        const toggle = document.getElementById('info-toggle');
        const content = document.querySelector('.info-content');
        toggle.addEventListener('click', () => {
            content.classList.toggle('collapsed');
            toggle.textContent = content.classList.contains('collapsed') ? '[+]' : '[-]';
        });
        // --- End of Info Box Toggle ---

        const isLocal = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
        const graphUrl = isLocal ? '/graph.json' : window.location.origin + '/graph.json';

        fetch(graphUrl)
            .then(res => res.json())
            .then(data => {

                // --- Correct Theme Synchronization ---
                let detectedTheme = window.localStorage.getItem('site-theme') || 'auto';
                if (detectedTheme === 'auto') {
                    detectedTheme = (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) ? 'dark' : 'light';
                }
                applyTheme(detectedTheme);
                themeSel.value = detectedTheme;
                // --- End of Theme Sync ---

                const nodes = [];
                const links = [];

                // Re-calculate colors based on new logic
                const defaultNodeColor = '#ffbf00'; // Default fallback

                for (const nodeId in data.nodes) {
                    const node = data.nodes[nodeId];
                    if (node.hide) continue;
                    nodes.push({
                        id: node.url,
                        name: node.title,
                        val: node.size,
                        // Apply specific color logic
                        color: getNodeColorByPath(node.url, defaultNodeColor) 
                    });
                    if (node.outBound) {
                        node.outBound.forEach(targetUrl => {
                            if (data.nodes[targetUrl] && !data.nodes[targetUrl].hide) {
                                links.push({ source: node.url, target: targetUrl });
                            }
                        });
                    }
                }

                // --- Calculate Curvature for Bidirectional Links ---
                const linksByPair = {};
                links.forEach(link => {
                    const pairKey = [link.source, link.target].sort().join('-');
                    if (!linksByPair[pairKey]) linksByPair[pairKey] = [];
                    linksByPair[pairKey].push(link);
                });

                Object.values(linksByPair).forEach(linksInPair => {
                    if (linksInPair.length > 1) {
                        // For bi-directional (or multi) links, we use curvature and rotation
                        linksInPair.forEach((link, i) => {
                            link.curvature = 0.3; // Always positive for 3D
                            // Spread the curves out by rotating them around the axis
                            // For 2 links: 0 and PI (180 deg)
                            link.rotation = i * Math.PI; 
                        });
                    } else {
                        linksInPair.forEach(l => {
                            l.curvature = 0;
                            l.rotation = 0;
                        });
                    }
                });
                // --------------------------------------------------

                const graphData = { nodes, links };

                const highlightedNodes = new Set();
                const highlightedLinks = new Set();
                const theme = themes[detectedTheme]; // Use the correctly detected theme

                // --- Double-click handling --- 
                let lastClickTime = 0;
                let lastClickedNode = null;
                // --- End of Double-click handling ---

                window.Graph = ForceGraph3D()(container)
                    .graphData(graphData)
                    .backgroundColor(theme.bg) // Initialize with the correct theme background
                    .nodeLabel('name')
                    // Use the color property we set on the node object
                    .nodeColor(node => node.color) 
                    .nodeThreeObject(node => {
                        const sprite = new SpriteText(node.name);
                        sprite.color = '#ffffff'; 
                        sprite.textHeight = 4; // Reasonable size
                        sprite.padding = 1;
                        sprite.backgroundColor = 'rgba(0,0,0,0.5)'; 
                        sprite.borderRadius = 2;
                        
                        // Move text BELOW the node
                        // Negative Y offset
                        const nodeRadius = node.val ? Math.min(7, Math.max(node.val, 2)) : 2; 
                        sprite.position.y = -(nodeRadius + 4); 
                        
                        return sprite;
                    })
                    .nodeThreeObjectExtend(true) // Restore the sphere
                    .linkWidth(0.5)
                    .linkDirectionalParticles(1)
                    .linkDirectionalParticleWidth(1.2)
                    .linkDirectionalParticleSpeed(0.006)
                    .linkColor(theme.linkColor) // Initialize with the correct theme link color
                    .onNodeClick(node => {
                        const now = new Date().getTime();
                        if (now - lastClickTime < 300 && node === lastClickedNode) {
                            // Double-click detected
                            openNodeUrl(node);
                        } else {
                            // Single-click action: focus camera
                            const distance = 120;
                            const distRatio = 1.2 + distance / Math.hypot(node.x, node.y, node.z);
                            window.Graph.cameraPosition(
                                { x: node.x * distRatio, y: node.y * distRatio, z: node.z * distRatio },
                                node,
                                2000
                            );
                        }
                        lastClickTime = now;
                        lastClickedNode = node;
                    })
                    .onNodeRightClick(openNodeUrl)
                    .onNodeHover(node => {
                        if (!node) {
                            // Reset to default when no node is hovered
                            window.Graph.nodeColor(n => n.color)
                                .nodeVal(n => n.val)
                                .linkColor(theme.linkColor)
                                .linkWidth(0.5)
                                .nodeLabel(n => n.name);
                            return;
                        }

                        // Highlight nodes and links
                        const highlightedNodes = new Set();
                        const highlightedLinks = new Set();
                        highlightedNodes.add(node.id);
                        graphData.links.forEach(link => {
                            const sourceId = typeof link.source === 'object' ? link.source.id : link.source;
                            const targetId = typeof link.target === 'object' ? link.target.id : link.target;
                            if (sourceId === node.id || targetId === node.id) {
                                highlightedLinks.add(link);
                                highlightedNodes.add(sourceId);
                                highlightedNodes.add(targetId);
                            }
                        });

                        // Update styles based on highlight
                        const currentTheme = themes[themeSel.value];
                        window.Graph.nodeColor(n => highlightedNodes.has(n.id) ? n.color : 'rgba(170, 170, 170, 0.6)')
                            .nodeVal(n => highlightedNodes.has(n.id) ? n.val * 1.5 : n.val)
                            .linkColor(link => highlightedLinks.has(link) ? currentTheme.linkColor : currentTheme.fadedLinkColor)
                            .linkWidth(link => highlightedLinks.has(link) ? 2 : 0.5)
                            .nodeLabel(n => highlightedNodes.has(n.id) ? n.name : '');
                    });

                // Make it responsive
                window.addEventListener('resize', () => {
                    window.Graph.width(container.clientWidth);
                    window.Graph.height(container.clientHeight);
                });
                window.Graph.width(container.clientWidth);
                window.Graph.height(container.clientHeight);

                function openNodeUrl(node) {
                    const baseUrl = isLocal ? '' : window.location.origin;
                    const fullUrl = baseUrl + node.id;
                    window.location.href = fullUrl; // Navigate in the current tab
                }

                window.Graph.d3Force('link').distance(() => 30);
                window.Graph.d3Force('charge').strength(-120);
            })
            .catch(error => {
                console.error("Error loading graph data:", error);
                container.innerHTML = '<div style="color:red;text-align:center;padding-top:50px;">Failed to load graph data.</div>';
            });
    </script>
</body>
</html>
