    <script>
    // Service Worker注册
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
            navigator.serviceWorker.register('/sw.js')
                .then(function(registration) {
                    console.log('ServiceWorker registration successful');
                })
                .catch(function(err) {
                    console.log('ServiceWorker registration failed: ', err);
                });
        });
    }

    // PWA安装提示
    let deferredPrompt;
    let originalTitle = document.title; // Store original title

    window.addEventListener('beforeinstallprompt', function(e) {
        e.preventDefault();
        deferredPrompt = e;
        
        // Temporarily change document.title to siteName from meta tag for PWA install prompt consistency
        const siteNameMeta = document.querySelector('meta[name="apple-mobile-web-app-title"]');
        if (siteNameMeta && siteNameMeta.content) {
            document.title = siteNameMeta.content;
        } else {
            // Fallback if meta tag is not found or content is empty
            document.title = "Nonlinear - Control Theory & AI Knowledge Base"; // Hardcode site name
        }

        window.dispatchEvent(new CustomEvent('pwa_prompt_available', { detail: deferredPrompt }));
        
        // Restore original title after user choice
        deferredPrompt.userChoice.then((choiceResult) => {
            document.title = originalTitle; // Restore original title
            if (choiceResult.outcome === 'accepted') {
                console.log('User accepted the PWA install prompt');
            } else {
                console.log('User dismissed the PWA install prompt');
            }
            deferredPrompt = null;
        });
    });

    // 网络状态监听
    function updateNetworkStatus() {
        if (!navigator.onLine) {
            const offlineIndicator = document.createElement('div');
            offlineIndicator.textContent = '离线模式';
            offlineIndicator.className = 'offline-indicator';
            offlineIndicator.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: #ff6b6b;
                color: white;
                padding: 8px 16px;
                border-radius: 20px;
                font-size: 14px;
                z-index: 1000;
                animation: slideIn 0.3s ease;
            `;
            
            if (!document.querySelector('.offline-indicator')) {
                document.body.appendChild(offlineIndicator);
                setTimeout(() => {
                    offlineIndicator.remove();
                }, 3000);
            }
        } else {
            const indicator = document.querySelector('.offline-indicator');
            if (indicator) indicator.remove();
        }
    }

    window.addEventListener('online', updateNetworkStatus);
    window.addEventListener('offline', updateNetworkStatus);
    updateNetworkStatus();
    </script>

